<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>1.1.1</PackageVersion>
    <PackageId>NBK_RedSpy.ST_Template.Template</PackageId>
    <Title>Shortest Trip To Earth Template</Title>
    <Authors>NBK_RedSpy</Authors>
    <Description>A template to create a Shortest Trip To Earth Mod</Description>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoDefaultExcludes>true</NoDefaultExcludes>
  </PropertyGroup>
  <PropertyGroup>
    <NoWarn>$(NoWarn),NU5128</NoWarn>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageOutputPath>./.nupkg</PackageOutputPath>    

    <PackageTags>ST_Template;Shortest Trip To Earth;</PackageTags>
    <PackageCopyright>NBK_RedSpy 2024</PackageCopyright>
    <!-- <PackageIcon>icon.png</PackageIcon> -->
    <PackageProjectUrl>https://github.com/NBKRedSpy/ST_Template</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="template\**\*" Exclude="**\.vs\**;**\bin\**;**\obj\**" />
    <Compile Remove="**\*" />
  </ItemGroup>

  <ItemGroup>
    <!-- <None Include="icon.png" Pack="true" PackagePath="" /> -->
  </ItemGroup>

</Project>